        xmlns:local="clr-namespace:Communication"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Rectangle Fill="#FF6B6BFF" HorizontalAlignment="Left" Height="58" Margin="-2,0,-5,0" VerticalAlignment="Top" Width="524"/>
        <Label x:Name="TitleLabel" Content="TCP/IP 통신" HorizontalAlignment="Center" Margin="211,19,205,0" VerticalAlignment="Top" FontSize="16" Width="101" Foreground="White"/>
        <Button x:Name="ServerBtn" Content="Server" HorizontalAlignment="Left" Margin="166,101,0,0" VerticalAlignment="Top" Width="175" Height="59" Click="ServerBtn_Click"/>
        <Button x:Name="ClientBtn" Content="Client" HorizontalAlignment="Left" Margin="166,203,0,0" VerticalAlignment="Top" Width="175" Height="59" Click="ClientBtn_Click"/>

    </Grid>
</Window>
